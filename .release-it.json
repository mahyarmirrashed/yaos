{
  "hooks": {
    "before:git:commit": "yarn precommit"
  },
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore(release): ${version}",
    "tagName": "${version}",
    "tagAnnotation": "Release v${version}"
  },
  "github": {
    "releaseName": "${version}",
    "preRelease": true,
    "draft": true
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": "angular"
    }
  }
}
